.bubble-wrap {
  position: relative;
}
.wait-point {
  display:inline-block;
  width:6px;
  height:6px;
  border-radius:3px;
  background-color: #ddd;
  margin: 0 2px;

}
.loading {
  position: relative;
}

.line-between {
  height: 1px;
  width: 100%;
  background: #5ebeeb;
  overflow: hidden;
  margin: 30rpx 0;
}

.create-time {
  font-size:28rpx;
  color: #fff;
  margin-bottom:10px;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  -webkit-justify-content: center;
}

.section-body{
  word-wrap: break-word;
  position: relative;
  margin-left: 5%;
  width:90%;
  background: #ffffff;
  padding:50rpx 60rpx;
  box-sizing: border-box;
  border-radius: 5px;
  min-height: 260rpx;
}

.text-detail {
  font-size: 40rpx;
  line-height: 1.231;
  vertical-align: text-bottom;
  box-sizing: border-box;
  margin-bottom: 30px;
  font-family: "PingFang-SC-Regular","SimSun","Microsoft Yahei";
  font-variant-ligatures: none;
  color: #fff;
}
.text-detail-0 {
  font-size: 43rpx;
  line-height: 1.231;
  vertical-align: text-bottom;
  box-sizing: border-box;
  margin-bottom: 30px;
  font-family: "PingFang-SC-Regular","SimSun","Microsoft Yahei";
  font-variant-ligatures: none;
  color: #707070;
}
.text-detail-1 {
  font-size: 30rpx;
  line-height: 1.231;
  vertical-align: text-bottom;
  box-sizing: border-box;
  font-family: "PingFang-SC-Regular","SimSun","Microsoft Yahei";
  font-variant-ligatures: none;
  color: #000000;
}
.text-detail-2 {
  font-size: 35rpx;
  line-height: 1.231;
  vertical-align: text-bottom;
  box-sizing: border-box;
  margin-bottom: 20px;
  font-family: "PingFang-SC-Regular","SimSun","Microsoft Yahei";
  font-variant-ligatures: none;
  color: #000000;
}
.text-detail-en_US {
  line-height: 1.231;
}

.text-detail-zh_CN {
  line-height: 1.41;
}

.translate-message{
  position: relative;
  padding: 0 2px;
  margin-left: 20px;
  margin-bottom: 30px;
}
.send-message {
  position: relative;
  padding: 0 2px;
  margin-bottom: 40px;
  padding-left: 40px;
}

.send-message  .text-detail {
  color: #ffffff;
}

.edit-icon {
  position: absolute;
  display: flex;
  align-items: center;
  right: 8rpx;
  bottom: 0;
  padding: 0 8rpx;
  bottom: 7rpx;
}

.edit-icon-img {
  width:40rpx;
  height:40rpx;
}

.play-icon {
  position: absolute;
  right: 3rpx;
  bottom: 7rpx;
  padding: 0 8rpx;
  display: flex;
  align-items: center;
}

.edit-icon::before
.play-icon::before {
  content:"";
  position:absolete;
  top:-10rpx;
  left:-10rpx;
  bottom:-10rpx;
  right:-10rpx;
}


.text-content {
  width: 100%;
  margin-left: -20px;
  margin: 0 48px 0 0;
  box-sizing: border-box;
}


.modal-wrap {
  position: absolute;
  width: 100%;
  box-sizing:border-box;
}
/* 重置navigator样式 */
.navigator-hover {
  background-color:#010D33 ;
}